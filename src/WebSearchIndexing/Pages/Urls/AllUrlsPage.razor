@page "/all-urls/{RouteText?}"
@using WebSearchIndexing.Pages.Urls.Components

<PageTitle>Your urls</PageTitle>

<MudText Class="mb-5" Typo="Typo.h5">@string.Format(_title, RouteText)</MudText>

<MudTabs PanelClass="py-6"
         TabPanelClass="tab-custom"
         TabHeaderClass="tabs-toolbar-custom"
         Elevation="0"
         HideSlider="true"
         ActivePanelIndex="@_activePanelIndex">
    <ChildContent>
        <MudTabPanel Text="Updated" OnClick="@(() => NavigateTo("updated"))">
            <ChildContent>
                <UrlsTableComponent UrlRequestType="_selectedRequestType" />
            </ChildContent>
        </MudTabPanel>

        <MudTabPanel Text="Deleted" OnClick="@(() => NavigateTo("deleted"))">
            <ChildContent>
                <UrlsTableComponent UrlRequestType="_selectedRequestType" />
            </ChildContent>
        </MudTabPanel>
    </ChildContent>
</MudTabs>