<MudDialog>
    <DialogContent>
        <MudStack>
            <MudAlert Severity="Severity.Info" Variant="Variant.Filled" NoIcon>
                Upload your service account key json file
            </MudAlert>

            <MudStack Row AlignItems="AlignItems.Center">
                <MudFileUpload Class="mt-0"
                               T="IReadOnlyList<IBrowserFile>"
                               MaximumFileCount="1"
                               Accept=".json"
                               OnFilesChanged="HandleUploadingFile">
                    <ButtonTemplate>
                        <MudButton HtmlTag="label"
                                   Variant="Variant.Filled"
                                   Color="Color.Primary"
                                   StartIcon="@Icons.Material.Filled.DataArray"
                                   for="@context.Id">
                            Upload File
                        </MudButton>
                    </ButtonTemplate>
                </MudFileUpload>

                <MudAlert Severity="@(_isUploadedFile ? Severity.Success : Severity.Error)" Variant="Variant.Filled" Dense NoIcon>
                    @(_isUploadedFile ? "File uploaded" : "File not uploaded")
                </MudAlert>
            </MudStack>

            <MudTextField T="uint"
                          Variant="Variant.Outlined"
                          Margin="Margin.Dense"
                          Label="Quota limit per day"
                          @bind-Value="_serviceAccount.QuotaLimitPerDay"
                          Immediate />
        </MudStack>
    </DialogContent>

    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="Save">Save</MudButton>
        <MudButton Variant=" Variant.Outlined" Color="Color.Secondary" OnClick="Close">Cancel</MudButton>
    </DialogActions>
</MudDialog>