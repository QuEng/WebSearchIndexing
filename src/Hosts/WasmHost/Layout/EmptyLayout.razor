@inherits LayoutComponentBase

<script>
    // Safe way to hide loader from Blazor component
    setTimeout(() => {
        const loader = document.getElementById('wasm-loader');
        if (loader) {
            loader.style.opacity = '0';
            loader.style.transition = 'opacity 0.5s ease-out';
            setTimeout(() => {
                loader.remove();
            }, 500);
        }
    }, 100);
</script>

<div class="page">
    @Body
</div>
