{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "WebSearchIndexing.Modules.Identity": "Information"
    }
  },
  "AllowedHosts": "*",
  "Seq": {
    "ServerUrl": "http://localhost:5341",
    "ApiKey": ""
  },
  "Identity": {
    "BaseUrl": "http://localhost:5124",
    "PasswordPolicy": {
      "MinimumLength": 8,
      "MaximumLength": 128,
      "RequireUppercase": true,
      "RequireLowercase": true,
      "RequireDigit": true,
      "RequireSpecialCharacter": true,
      "PasswordHistoryLimit": 5,
      "MinimumPasswordAgeDays": 1,
      "MaximumPasswordAgeDays": 90,
      "CommonPasswordBlacklist": [
        "password",
        "password123",
        "12345678",
        "qwerty",
        "admin",
        "letmein",
        "welcome",
        "monkey",
        "dragon",
        "master"
      ]
    },
    "RateLimiting": {
      "LoginAttemptsLimit": 5,
      "LoginAttemptsWindowMinutes": 15,
      "RegistrationAttemptsLimit": 3,
      "RegistrationAttemptsWindowMinutes": 60,
      "RefreshAttemptsLimit": 10,
      "RefreshAttemptsWindowMinutes": 60,
      "PasswordResetAttemptsLimit": 3,
      "PasswordResetAttemptsWindowMinutes": 60
    },
    "AccountLockout": {
      "MaxFailedAttempts": 5,
      "LockoutDurationMinutes": 30,
      "FailedAttemptsWindowMinutes": 15
    },
    "CookieSecurity": {
      "RequireHttps": true,
      "HttpOnly": true,
      "SameSite": "Strict",
      "ExpirationMinutes": 60,
      "SlidingExpiration": true,
      "Path": "/"
    }
  }
}
