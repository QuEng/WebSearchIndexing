@page "/batches"
@using WebSearchIndexing.Modules.Catalog.Ui.Pages.Urls.Dialogs

<PageTitle>URL batches</PageTitle>

<MudText Typo="Typo.h5" Class="mb-2">Manage URL batches</MudText>
<MudText Typo="Typo.body2" Class="mb-6">
    Upload new URL batches or review the latest import activity.
</MudText>

<MudPaper Class="pa-6 mb-4" Elevation="1">
    <MudStack Spacing="2">
        <MudSelect T="UrlItemType"
                   Label="Batch type"
                   Variant="Variant.Outlined"
                   @bind-Value="_selectedType">
            <MudSelectItem Value="UrlItemType.Updated">Updated content</MudSelectItem>
            <MudSelectItem Value="UrlItemType.Deleted">Removed content</MudSelectItem>
        </MudSelect>

        <MudButton Color="Color.Primary"
                   Variant="Variant.Filled"
                   StartIcon="@Icons.Material.Filled.CloudUpload"
                   OnClick="OpenImportDialogAsync"
                   Style="width: fit-content">
            Import @_selectedType.ToString().ToLower() urls
        </MudButton>
    </MudStack>
</MudPaper>

<MudAlert Severity="Severity.Info" Variant="Variant.Outlined">
    Historical batches and processing statistics will appear here once available.
</MudAlert>
