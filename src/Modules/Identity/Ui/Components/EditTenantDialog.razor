@inject HttpClient HttpClient
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6" Class="mb-4">Edit Workspace</MudText>
        
        <MudTextField
            @bind-Value="_model.Name"
            Label="Workspace Name"
            Required="true"
            Variant="Variant.Outlined"
            Class="mb-3"
            HelperText="Enter a unique name for your workspace" />
            
        <MudSelect
            @bind-Value="_model.Plan"
            Label="Plan"
            Required="true"
            Variant="Variant.Outlined"
            Class="mb-3">
            <MudSelectItem Value="@("Free")">Free</MudSelectItem>
            <MudSelectItem Value="@("Pro")">Pro</MudSelectItem>
            <MudSelectItem Value="@("Enterprise")">Enterprise</MudSelectItem>
        </MudSelect>
        
        <MudSwitch
            @bind-Value="_model.IsActive"
            Label="Active"
            Color="Color.Primary"
            Class="mb-3" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton 
            Color="Color.Primary" 
            Variant="Variant.Filled"
            OnClick="UpdateTenant"
            Disabled="@(!IsFormValid() || _isLoading)">
            @if (_isLoading)
            {
                <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true"/>
                <MudText Class="ms-2">Saving...</MudText>
            }
            else
            {
                <MudText>Save Changes</MudText>
            }
        </MudButton>
    </DialogActions>
</MudDialog>

@code
{
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public Guid TenantId { get; set; }
    [Parameter] public string Name { get; set; } = string.Empty;
    [Parameter] public string Plan { get; set; } = string.Empty;
    [Parameter] public bool IsActive { get; set; }
    [Parameter] public EventCallback OnTenantUpdated { get; set; }
    
    private EditTenantModel _model = new();
    private bool _isLoading = false;
    
    protected override void OnParametersSet()
    {
        _model.Name = Name;
        _model.Plan = Plan;
        _model.IsActive = IsActive;
    }
    
    private bool IsFormValid()
    {
        return !string.IsNullOrWhiteSpace(_model.Name) && 
               !string.IsNullOrWhiteSpace(_model.Plan);
    }
    
    private async Task UpdateTenant()
    {
        if (!IsFormValid()) return;
        
        try
        {
            _isLoading = true;
            
            var request = new
            {
                name = _model.Name.Trim(),
                plan = _model.Plan,
                isActive = _model.IsActive
            };
            
            var response = await HttpClient.PutAsJsonAsync($"/api/v1/identity/tenants/{TenantId}", request);
            
            if (response.IsSuccessStatusCode)
            {
                Snackbar.Add($"Workspace '{_model.Name}' updated successfully!", Severity.Success);
                await OnTenantUpdated.InvokeAsync();
                MudDialog.Close(DialogResult.Ok(true));
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                Snackbar.Add($"Error updating workspace: {errorContent}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error updating workspace: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isLoading = false;
        }
    }
    
    private void Cancel() => MudDialog.Cancel();
    
    private class EditTenantModel
    {
        public string Name { get; set; } = string.Empty;
        public string Plan { get; set; } = string.Empty;
        public bool IsActive { get; set; } = true;
    }
}
